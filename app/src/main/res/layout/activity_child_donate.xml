<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_child_mainactivity_header"
        android:id="@+id/child_donateactivity_header"/>

    <LinearLayout
        android:id="@+id/child_donateactivity_linearlayout_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/child_donateactivity_header"
        android:layout_marginTop="50dip"
        android:layout_centerHorizontal="true">

        <TextView
            android:text="哇~你已经有"
            android:textSize="12pt"
            android:textColor="@color/indianred"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/child_donateactivity_textview_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12pt"
            android:textColor="@color/indianred"
            android:text="50"/>

        <TextView
            android:text="粒种子啦~"
            android:textSize="12pt"
            android:textColor="@color/indianred"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true">

        <ImageButton
            android:layout_width="120dip"
            android:layout_height="50dip"
            android:layout_margin="10dip"
            android:background="@mipmap/child_donateactivity_donate"/>

        <ImageButton
            android:layout_width="120dip"
            android:layout_height="50dip"
            android:layout_margin="10dip"
            android:background="@mipmap/child_donateactivity_back"/>
        </LinearLayout>

    <ImageView
        android:layout_width="250dip"
        android:layout_height="200dip"
        android:background="@mipmap/child_donateactivity_bag"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
