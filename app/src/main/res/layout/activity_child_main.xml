<RelativeLayout android:id="@+id/child_mainactivity_relativelayout_root"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <include
        android:id="@+id/child_mainactivity_header"
        layout="@layout/layout_child_mainactivity_header"/>

    <LinearLayout
        android:id="@+id/child_mainactivity_linearlayout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/indianred"
        android:layout_below="@id/child_mainactivity_header">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/child_task_module"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/child_task_history_module"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/child_donate_project_module"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/child_mainactivity_linearlayout_top">

        <android.support.v4.view.ViewPager
            android:id="@+id/child_mainactivity_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.viewpagerindicator.UnderlinePageIndicator
            android:id="@+id/child_mainactivity_indicator"
            android:layout_width="wrap_content"
            android:layout_height="3dip"
           />


    </RelativeLayout>


</RelativeLayout>
