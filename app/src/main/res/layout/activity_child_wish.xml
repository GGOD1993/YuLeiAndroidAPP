<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_child_mainactivity_header"
        android:id="@+id/child_wishactivity_header"/>

    <ImageView
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:background="@mipmap/wish_1"
        android:layout_below="@+id/child_wishactivity_header"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="49dp"
        android:layout_marginTop="40dp" />

    <ImageView
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:background="@mipmap/wish_2"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="42dp" />

    <ImageView
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:background="@mipmap/wish_3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="81dp" />

    <ImageView
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:background="@mipmap/wish_bag"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dip"/>

</RelativeLayout>
