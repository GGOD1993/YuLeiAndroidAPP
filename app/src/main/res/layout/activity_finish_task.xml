<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <include layout="@layout/layout_child_mainactivity_header"
             android:id="@+id/finishtaskactivity_header"/>

    <LinearLayout
        android:id="@+id/parent_finishtaskactivity_linearlayout_fromuserid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dip"
        android:layout_below="@id/finishtaskactivity_header">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="任务对象: "
            android:gravity="center"
            android:textSize="10pt"/>

        <TextView
            android:id="@+id/parent_finishtaskactivity_edittext_fromuserid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="10pt"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/parent_finishtaskactivity_linearlayout_taskname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dip"
        android:layout_below="@id/parent_finishtaskactivity_linearlayout_fromuserid">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="任务名称: "
            android:gravity="center"
            android:textSize="10pt"/>

        <TextView
            android:id="@+id/parent_finishtaskactivity_edittext_taskname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="10pt"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/parent_finishtaskactivity_linearlayout_award"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/parent_finishtaskactivity_linearlayout_taskname"
        android:layout_margin="20dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="任务奖励: "
            android:gravity="center"
            android:textSize="10pt"/>

        <TextView
            android:id="@+id/parent_finishtaskactivity_editext_award"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="10pt"
            />

    </LinearLayout>

    <ScrollView
        android:id="@+id/parent_finishtaskactivity_scrollview_taskcontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/parent_finishtaskactivity_linearlayout_award"
        android:layout_marginTop="20dip"
        android:layout_marginStart="20dip"
        android:layout_marginEnd="20dip"
        android:layout_marginBottom="100dip">

        <TextView
            android:id="@+id/parent_finishtaskactivity_editext_taskcontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10pt"
            android:gravity="start"
            />

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dip"
        android:layout_marginEnd="20dip"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dip"
        >

        <ImageButton
            android:id="@+id/parent_finishtaskactivity_imagebutton_submit"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_marginEnd="20dip"
            android:layout_alignParentEnd="true"
            android:background="@drawable/parent_addtaskactivity_imagebutton_submit_style"
            android:contentDescription="@null"/>

        <ImageButton
            android:id="@+id/parent_finishtaskactivity_imagebutton_cancel"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_marginStart="20dip"
            android:background="@drawable/parent_addtaskactivity_imagebutton_cancel_style"
            android:contentDescription="@null"/>
    </RelativeLayout>

</RelativeLayout>
