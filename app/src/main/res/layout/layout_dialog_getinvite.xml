<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:orientation="vertical"
                                    card_view:cardBackgroundColor="#ddFFDEDD"
                                    card_view:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

         <RelativeLayout
            android:id="@+id/relativelayout_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dip"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="15dip"
            >

            <ImageView
                android:id="@+id/parent_recyclerview_userimage"
                android:layout_width="45dip"
                android:layout_height="45dip"
                android:layout_centerInParent="true"
                android:src="@drawable/circle_mask_style"
                />

            <com.example.pc.myapplication.ViewStyle.CircularImage
                android:id="@+id/parent_recyclerview_circularimage_userimage"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/parent_leftmenu_dialog_relativelayout_header"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/skyblue">

            <TextView
                android:id="@+id/parent_leftmenu_dialog_textview_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="9pt"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/parent_leftmenu_dialog_textview_inviteinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/parent_leftmenu_dialog_relativelayout_header"
            android:layout_marginEnd="40dip"
            android:layout_marginStart="40dip"
            android:layout_marginTop="25dip"
            android:textSize="8pt"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_below="@id/parent_leftmenu_dialog_textview_inviteinfo"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="90dip"
            android:layout_marginStart="90dip"
            android:layout_marginTop="20dip">

            <ImageButton
                android:id="@+id/parent_leftmenu_dialog_imagebutton_cancel"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:background="@drawable/parent_addtaskactivity_imagebutton_cancel_style"/>

            <ImageButton
                android:id="@+id/parent_leftmenu_dialog_imagebutton_submit"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/parent_addtaskactivity_imagebutton_submit_style"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>