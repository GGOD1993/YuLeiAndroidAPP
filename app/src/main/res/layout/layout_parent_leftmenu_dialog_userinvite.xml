<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:orientation="vertical"
                                    card_view:cardBackgroundColor="#ddFFDEDD"
                                    card_view:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/parent_leftmenu_dialog_userinvite_relativelayout_header"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/skyblue">

            <TextView
                android:id="@+id/parent_leftmenu_dialog_userinvite_textview_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="9pt"/>

        </RelativeLayout>

        <EditText
            android:id="@+id/parent_leftmenu_edittext_tousername"
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:layout_below="@id/parent_leftmenu_dialog_userinvite_relativelayout_header"
            android:layout_marginEnd="40dip"
            android:layout_marginStart="40dip"
            android:layout_marginTop="20dip"
            android:background="@drawable/signin_edittext_style"
            android:hint="请输入用户名"
            android:textSize="10pt"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_below="@id/parent_leftmenu_edittext_tousername"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="90dip"
            android:layout_marginStart="90dip"
            android:layout_marginTop="20dip">

            <ImageButton
                android:id="@+id/parent_leftmenu_imagebutton_cancel"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:background="@drawable/parent_addtaskactivity_imagebutton_cancel_style"/>

            <ImageButton
                android:id="@+id/parent_leftmenu_imagebutton_submit"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_alignParentEnd="true"
                android:background="@drawable/parent_addtaskactivity_imagebutton_submit_style"/>
        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>