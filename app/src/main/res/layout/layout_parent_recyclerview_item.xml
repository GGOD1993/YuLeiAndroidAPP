<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dip"
    >

    <RelativeLayout
        android:id="@+id/relativelayout_image"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

    <ImageView
        android:id="@+id/parent_recyclerview_userimage"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_centerInParent="true"
        android:src="@drawable/circle_mask_style"
        />

    <com.example.pc.myapplication.ViewStyle.CircularImage
        android:id="@+id/parent_recyclerview_circularimage_userimage"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_centerInParent="true"
        />

    </RelativeLayout>

    <LinearLayout
        android:layout_toEndOf="@id/relativelayout_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dip"
        android:orientation="vertical">

        <TextView
            android:id="@+id/parent_recyclerview_textview_childid"
            android:text="@string/hello_world"
            android:layout_width="100dip"
            android:layout_height="25dip"
            android:textSize="9pt"
            android:layout_margin="5dip"/>

        <TextView
            android:id="@+id/parent_recyclerview_textview_briefinfo"
            android:text="@string/hello_world"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:textSize="7pt"
            android:layout_margin="5dip"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dip"
        android:orientation="vertical">

        <TextView
            android:id="@+id/parent_rectclerview_textview_award"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:textSize="7pt"
            android:layout_marginTop="5dip"
            android:text="@string/hello_world"
            />

        <ImageView
            android:id="@+id/parent_recyclerview_imageview_taskstate"
            android:background="@mipmap/image_parent_recyclerview_item_doing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:layout_gravity="end"
            android:layout_margin="3dip"
            />

        </LinearLayout>


</RelativeLayout>