<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="20dip"
                                    card_view:cardBackgroundColor="#ddFFDEDD"
                                    card_view:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/parent_recyclerview_relativelayout_header"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:background="@drawable/recyclerview_item_header_style"
            android:layout_alignParentTop="true">


            <ImageButton
                android:id="@+id/parent_recyclerview_imagebutten_close"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/recyclerview_cancel"/>

            <TextView
                android:id="@+id/parent_recyclerview_textview_taskstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="7pt"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativelayout_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dip"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="10dip"
            >

            <ImageView
                android:id="@+id/parent_recyclerview_userimage"
                android:layout_width="55dip"
                android:layout_height="55dip"
                android:layout_centerInParent="true"
                android:src="@drawable/circle_mask_style"
                />

            <com.example.pc.myapplication.ViewStyle.CircularImage
                android:id="@+id/parent_recyclerview_circularimage_userimage"
                android:layout_width="45dip"
                android:layout_height="45dip"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/parent_recyclerview_taskinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/parent_recyclerview_relativelayout_header"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="150dip"
            android:layout_marginLeft="150dip"
            android:layout_marginTop="15dip"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/parent_taskinfoactivity_linearlayout_childid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="任务对象: "
                    android:textSize="7pt"/>

                <TextView
                    android:id="@+id/parent_recyclerview_textview_childid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="7pt"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/parent_taskinfoactivity_linearlayout_taskname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="任务编号: "
                    android:textSize="7pt"/>

                <TextView
                    android:id="@+id/parent_recyclerview_textview_briefinfo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="7pt"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/parent_taskinfoactivity_linearlayout_award"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="任务奖励: "
                    android:textSize="7pt"/>

                <TextView
                    android:id="@+id/parent_rectclerview_textview_award"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="7pt"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/parent_recyclerview_linearlayout_taskcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="任务内容: "
                    android:textSize="7pt"/>

                <TextView
                    android:id="@+id/parent_recyclerview_textview_taskcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="7pt"
                    />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/parent_recyclerview_taskinfo"
            android:layout_marginEnd="80dip"
            android:layout_marginStart="80dip"
            >

            <ImageButton
                android:id="@+id/parent_recyclerview_submit"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="20dip"
                android:layout_marginRight="20dip"
                android:background="@drawable/parent_addtaskactivity_imagebutton_submit_style"
                android:contentDescription="@null"/>

            <ImageButton
                android:id="@+id/parent_taskinfoactivity_imagebutton_cancel"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_marginStart="20dip"
                android:layout_marginLeft="20dip"
                android:background="@drawable/parent_addtaskactivity_imagebutton_cancel_style"
                android:contentDescription="@null"/>
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>