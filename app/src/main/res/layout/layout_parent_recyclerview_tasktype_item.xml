<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    card_view:cardBackgroundColor="#ddFFDEDD"
                                    card_view:cardCornerRadius="10dp">

    <RelativeLayout
        android:padding="10dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/layout_parent_recyclerview_tasktype_item_imageview"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_marginStart="50dip"
            android:layout_marginLeft="50dip"
            android:layout_marginTop="20dip"
            android:layout_marginBottom="20dip"
            />

        <TextView
            android:id="@+id/layout_parent_recyclerviedw_tasktype_item_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dip"
            android:layout_marginLeft="20dip"
            android:layout_toRightOf="@id/layout_parent_recyclerview_tasktype_item_imageview"
            android:text="@string/hello_world"
            android:textSize="10pt"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>